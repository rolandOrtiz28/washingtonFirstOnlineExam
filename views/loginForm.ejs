<% layout('/layouts/boilerplate') -%>
    <link rel="stylesheet" href="/css/loginForm.css">
    <%- include('./partials/flash') %>
        <section class="h-100 form mb-5">
            <div class="container py-3 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100 cardo">
                    <div class="col-md-8 col-lg-6">
                        <div class="card text-white bg-transparent">
                            <div class="card-body">
                                <!-- Pills navs -->
                                <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link active bg-transparent" id="tab-register" data-bs-toggle="pill"
                                            href="#pills-register" role="tab" aria-controls="pills-register"
                                            aria-selected="true">REGISTER</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link bg-transparent" id="tab-login" data-bs-toggle="pill" href="#pills-login"
                                            role="tab" aria-controls="pills-login" aria-selected="false">LOGIN</a>
                                    </li>
                                </ul>

                                <!-- Pills content -->
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="pills-register" role="tabpanel"
                                        aria-labelledby="tab-register">
                                        <form action="/student/register" method="POST" class="needs-validation"
                                            novalidate>
                                            <div class="mb-4">
                                                <label class="form-label" for="name">Full Name</label>
                                                <input type="text" id="name" class="form-control  bg-transparent" name="name"
                                                    placeholder="Enter fullname" required />
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                            </div>

                                            <div class="mb-4">
                                                <label class="form-label  bg-transparent" for="level">Level</label>
                                                <select class="form-control" name="level" required>
                                                    <option selected disabled>Enter Level</option>
                                                <option value="EAL-1A">EAL-1A</option>
                                                <option value="EAL-1B">EAL-1B</option>
                                                <option value="EAL-2A">EAL-2A</option>
                                                <option value="EAL-2B">EAL-2B</option>
                                                <option value="EAL-3A">EAL-3A</option>
                                                <option value="EAL-3B">EAL-3B</option>
                                                <option value="EAL-4A">EAL-4A</option>
                                                <option value="EAL-4B">EAL-4B</option>
                                                <option value="EAL-5A">EAL-5A</option>
                                                <option value="EAL-5B">EAL-5B</option>
                                                <option value="EAL-6A">EAL-6A</option>
                                                <option value="EAL-6B">EAL-6B</option>
                                                <option value="EAL-7A">EAL-7A</option>
                                                <option value="EAL-7B">EAL-7B</option>
                                                <option value="EAL-8A">EAL-8A</option>
                                                <option value="EAL-8B">EAL-8B</option>
                                                </select>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                            </div>

                                            <div class="mb-4">
                                                <label class="form-label" for="time">Time</label>
                                                <select class="form-control" name="time" required>
                                                    <option selected disabled>Enter the time</option>
                                                    <option value="Part-Time 1">Part-Time 1</option>
                                                    <option value="Part-Time 2">Part-Time 2</option>
                                                </select>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                            </div>

                                            <div class="mb-4">
                                                <label class="form-label" for="username">Username</label>
                                                <input type="text" id="username" class="form-control bg-transparent" name="username"
                                                    placeholder="Enter Username" required />
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                            </div>

                                            <div class="mb-4">
                                                <label class="form-label" for="email">Email</label>
                                                <input type="email" id="email" class="form-control  bg-transparent" name="email"
                                                    placeholder="Enter Email" />
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                            </div>

                                            <div class="mb-4">
                                                <label for="password">Password</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control bg-transparent" id="password2"
                                                        name="password" placeholder="Enter password" required>
                                                    <button class="btn btn-outline-secondary" type="button"
                                                        id="eye-icon2">
                                                        <i class="far fa-eye"></i>
                                                    </button>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <div class="invalid-feedback">Oppsy! It's kinda wrong.</div>
                                                </div>
                                                <div class="validicon w-100">
                                                    <div class="">
                                                        <div class="alert px-2 py-2 mb-0 d-none" role="alert" data-mdb-color="warning" id="password-alert">
                                                            <ul class="list-unstyled mb-0">
                                                                <li class="requirements leng">
                                                                    <i class="fas fa-check text-success me-2 check-leng" style="display:none"></i>
                                                                    <i class="fas fa-times text-danger me-3 cross-leng"></i>
                                                                    Your password must have at least 8 chars
                                                                </li>
                                                                <li class="requirements big-letter">
                                                                    <i class="fas fa-check text-success me-2 check-big-letter" style="display:none"></i>
                                                                    <i class="fas fa-times text-danger me-3 cross-big-letter"></i>
                                                                    Your password must have at least 1 big letter.
                                                                </li>
                                                                <li class="requirements num">
                                                                    <i class="fas fa-check text-success me-2 check-num" style="display:none"></i>
                                                                    <i class="fas fa-times text-danger me-3 cross-num"></i>
                                                                    Your password must have at least 1 number.
                                                                </li>
                                                
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <input type="hidden" name="role" value="student">

                                            <div class="d-flex justify-content-center">
                                                <button
                                                    class="button">Register</button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="tab-pane fade" id="pills-login" role="tabpanel"
                                        aria-labelledby="tab-login">
                                        <form action="/student/login" method="POST" class="needs-validation" novalidate>
                                            <div class="mb-4">
                                                <label class="form-label" for="username">Username</label>
                                                <input type="text" id="username" class="form-control" name="username"
                                                    placeholder="Enter username" required />
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                            </div>

                                            <div class="mb-4">
                                                <label for="password">Password</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control" id="password"
                                                        name="password" placeholder="Enter password" required>
                                                    <button class="btn btn-outline-secondary" type="button"
                                                        id="eye-icon">
                                                        <i class="far fa-eye"></i>
                                                    </button>
                                                    <div class="valid-feedback">Looks good!</div>
                                                    <div class="invalid-feedback">Oppsy! You forgot this one.</div>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-center">
                                                <button class="button mb-4">Login</button>
                                            </div>

                                            <div class="text-center">
                                                <a href="/student/reset-password" class="text-white">Reset password</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- Pills content -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="/javascript/login.js"></script>


